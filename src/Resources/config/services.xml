<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/*.xml" />
    </imports>
    <services>
        <defaults public="false" />
        <defaults autowire="false" />
        <defaults autoconfigure="false" />

        <service id="SyliusUnzerPlugin\Controller\GreetingController" autowire="true" autoconfigure="true" public="true" >
        </service>


        <service id="SyliusUnzerPlugin\Services\LoggerService" class="SyliusUnzerPlugin\Services\LoggerService">
            <argument type="service" id="logger" />
        </service>

        <service id="SyliusUnzerPlugin\Bootstrap\Bootstrap"  autowire="true" autoconfigure="true" public="true" class="SyliusUnzerPlugin\Bootstrap\Bootstrap">
            <argument type="service" id="Unzer\Core\Infrastructure\Logger\Interfaces\ShopLoggerAdapter"/>
        </service>



    </services>
</container>
