<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="unzer.handler.payment_partial_event_listener" class="SyliusUnzerPlugin\Handler\PaymentPartialEventListener">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="payum"/>
            <tag name="messenger.message_handler" priority="1" />
        </service>

        <service id="unzer.payum_action.refund_order" class="SyliusUnzerPlugin\Actions\RefundOrderAction" public="true">
            <argument type="service" id="Sylius\RefundPlugin\Provider\OrderRefundedTotalProviderInterface" />
            <tag name="payum.action" factory="unzer_payment" alias="payum.action.refund_order"/>
        </service>
    </services>
</container>
