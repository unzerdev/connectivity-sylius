<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="SyliusUnzerPlugin\Controller\Front\WebhookController" autowire="true" autoconfigure="true"
                 public="true">
            <argument type="service" id="payum"/>
        </service>

        <service id="SyliusUnzerPlugin\Controller\ConnectionController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\CredentialsController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\Admin\PaymentMethodController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\Admin\CountryController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\Admin\StoreController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\DesignController" autowire="true" autoconfigure="true"
                 public="true">
        </service>

        <service id="SyliusUnzerPlugin\Controller\Admin\RefundController" class="SyliusUnzerPlugin\Controller\Admin\Refund" public="true">
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="payum"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="sylius.manager.payment"/>
        </service>
    </services>
</container>
