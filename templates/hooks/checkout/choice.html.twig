{% set form = hookable_metadata.context.form %}

<div class="mb-5">
    {{ form_errors(form.method) }}

    {% for key, choice_form in form.method %}
        {% if form.method.vars.choices[key].data.code == 'unzer_payment' %}
            {% include '@SyliusUnzerPlugin/Checkout/SelectPayment/_choiceUnzer.html.twig' with {'order': hookable_metadata.context.order, 'form':form} %}
        {% else %}
            {% hook 'choice' with { 'form': choice_form, 'method': form.method.vars.choices[key].data } %}
        {% endif %}
    {% else %}
        {% hook 'choice#unavailable' %}
    {% endfor %}
</div>
